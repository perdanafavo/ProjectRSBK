<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.androidtan.favoperdana.androidngunyah">

    <application
        tools:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/ngunyah"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ngunyah"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SplashscreenActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FoodListActivity" />
        <activity android:name=".FoodDetailActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".OrderStatusActivity"></activity>
    </application>

</manifest>